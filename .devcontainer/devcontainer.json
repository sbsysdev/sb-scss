{
    "name": "SB-SCSS",
    "dockerComposeFile": "docker-compose.yml",
    "service": "app",
    "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
    "features": {},
    "customizations": {
        "vscode": {
            "extensions": [
                "mhutchie.git-graph",
                "eamodio.gitlens",
                "redhat.vscode-yaml",
                "esbenp.prettier-vscode"
            ]
        }
    },
    "mounts": ["source=${localEnv:HOME}/.ssh,target=/home/node/.ssh,readonly,type=bind"],
    "postCreateCommand": "git config --global --add safe.directory /workspaces/sb-scss && git config --global core.autocrlf input"
}
